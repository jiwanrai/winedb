<% provide(:title, 'All users') %>
<h1>All users</h1>

<div class="container">
  <table class="table ">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Delete</th>
    </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user_path(user.id) %></td>
      <td><%= user.email %></td>
      <td><%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" } %> | <%= link_to 'Edit User', edit_user_path(user), method: :get %></td>
    </tr>
  <% end %>
  </table>
</div>