<% provide(:title, @user.name) %>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">User Profile <%= link_to "Edit", {:controller => "users", :action => "edit", :event => @user }, class: "btn btn-default btn-xs" %></h3>
      </div>
      <div class="panel-body">
        <p>
          <strong>Name:</strong>
          <%= @user.name %>
        </p>
        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>
        <p>
          <strong>Nickname:</strong>
          <%= @user.nick_name %>
        </p>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Back', users_path %>
