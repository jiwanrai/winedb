<h1>Edit Region</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@region) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :country %>
      <%= f.select(:country_id, options_from_collection_for_select(Country.all, :id, :name, @region.country_id), class: "form-control")  %>

      <%= f.submit "Update Region", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
