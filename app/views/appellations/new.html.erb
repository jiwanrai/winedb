<div>
  <h3>Add a new appellation</h3>
</div>
</br>
<div>
  <div class="form-group">
    <%= form_for(@appellation) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name,class: "form-control" %>

      <%= f.label "Country" %>
      <%= f.select(:country_id,options_from_collection_for_select(Country.all, :id, :name), class: "form-control" )%>
      </br>
      <%= f.label :abbreviation %>
      <%= f.text_field :abbreviation, class: "form-control" %>
      </br>
      <%= f.submit "Add appellation", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>