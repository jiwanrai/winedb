<div>
  <h2>Add a new wine to your journal...</h2>
</div>
</br>
<div>
  <%= form_for @consumed_wine , html: {class: "form-horizontal", role: "form"} do |f| %>
    <div class="form-group">
      <%= f.label :wine, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select(:wine_id,options_from_collection_for_select(Wine.all, :id, :name, @consumed_wine.wine_id), class: "form-control" ) %>
      </div>
    </div>
    Wine not in the list? <%= link_to "Add a new wine", new_wine_path %> here.
    </br>
    <div class="form-group">
      <%= f.label :date_consumed,  class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_field :date_consumed, class: "form-control"  %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :review, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :review, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :rating, class: "col-sm-2 control-label"  %>
      <div class="col-sm-10">
        <%= f.text_field :rating, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :currency, class: "col-sm-2 control-label"  %>
      <div class="col-sm-10">
        <%= f.select(:currency_id ,options_from_collection_for_select(Currency.all, :id, :name)) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :price, class: "col-sm-2 control-label"  %>
      <div class="col-sm-10">
        <%= f.text_field :price, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :purchased_from, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :purchased_from, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :form, class: "col-sm-2 control-label"  %>
      <div class="col-sm-10">
        <%= f.text_field :form, class: "form-control" %>
      </div>
    </div>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    </br>
    <%= f.submit "Add wine to list", class: "btn btn-large btn-primary" %>

  <% end %>
</div>