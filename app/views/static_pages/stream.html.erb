stream.html.erb
  <div class="col-md-4">
    <div class="panel panel-default text-center">
      <div class="panel-body">
        <h3>Wine Stream</h3>
        <% if signed_in? %>
          <% @consumed_wines.each do |consumed_wine| %>
          <div class="panel panel-defualt">

            <div class="panel-heading">
              <%= consumed_wine.user.name %> drank <%= link_to consumed_wine.wine.name, wine_path(consumed_wine.wine) %>
              on <%= consumed_wine.date_consumed.strftime("%d.%m.%Y") if consumed_wine.date_consumed %><br>
              <strong>Review:</strong> "<%= consumed_wine.review %>"<br>
              <strong>Rating:</strong>


              <div class="col-md-6">
                <div class="progress">
                  <div class="progress-bar" role="progressbar" aria-valuenow="<%= consumed_wine.rating||0 %>" aria-valuemin="0" aria-valuemax="5" style="width: <%= ((consumed_wine.rating||0) / 5.to_f) * 100%>%;">
                    <%= consumed_wine.rating||0 %>
                  </div>
                </div>
              </div>

            </div>

          </div>
          <% end %>
        <% else %>
          Nothing yet
        <% end %>
      </div>
    </div>
  </div>