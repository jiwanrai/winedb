<div class="container">
  <table class="table ">
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Description</th>
      <th>Delete</th>
    </tr>
  <% @events.each do |event| %>
    <tr>
      <td><%= link_to event.name, event_path(event.id) %></td>
      <td><%= event.date %></td>
      <td><%= event.description %></td>
      <td><%= link_to "Delete", event, method: :delete, data: { confirm: "You sure?" } %> | <%= link_to 'Edit Event', edit_event_path(event), method: :get %></td>
    </tr>
  <% end %>
  </table>
</div>